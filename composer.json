{
    "name": "rawilk/laravel-casters",
    "description": "A collection of custom casts for Laravel.",
    "keywords": [
        "rawilk",
        "laravel-casters",
        "custom casts",
        "password cast",
        "encryption cast"
    ],
    "homepage": "https://github.com/rawilk/laravel-casters",
    "license": "MIT",
    "authors": [
        {
            "name": "Randall Wilk",
            "email": "randall@randallwilk.dev",
            "homepage": "https://randallwilk.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.4",
        "psalm/plugin-laravel": "^1.4",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Rawilk\\LaravelCasters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rawilk\\LaravelCasters\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
